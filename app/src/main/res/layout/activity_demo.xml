<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_chart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="图表Chart" />

            <Button
                android:id="@+id/btn_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="动态Bar" />

            <Button
                android:id="@+id/btn_translate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="动态切换" />

            <Button
                android:id="@+id/btn_scroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="固定Label" />

            <Button
                android:id="@+id/btn_tab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="滑页及循环进度条" />

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="聊天控件" />

            <Button
                android:id="@+id/btn_pinned"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="置顶滚动控件" />

            <Button
                android:id="@+id/btn_avatar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="头像缩放" />

            <Button
                android:id="@+id/btn_list_effect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="列表滚动效果" />

            <Button
                android:id="@+id/btn_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="图片移动" />

            <Button
                android:id="@+id/btn_photo_move"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="图片联动" />

            <Button
                android:id="@+id/btn_window_manager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="WindowManager" />

            <Button
                android:id="@+id/btn_card_io"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="识别银行卡号" />

            <Button
                android:id="@+id/btn_card_io2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="识别银行卡号2" />

            <Button
                android:id="@+id/btn_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OTHER" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>