<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BounceBackViewPager(Loop,Pager) -->
    <declare-styleable name="BounceBackViewPager">
        <!--determines the maximum amount of translation along the z-axis during the overscroll.Default is 150.-->
        <attr name="overscroll_translation" format="dimension" />
        <!--Duration of animation when user releases the over scroll. Default is 400 ms.-->
        <attr name="overscroll_animation_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="SmoothProgressBar">
        <attr name="spbStyle" format="reference"/>
        <attr name="spb_color" format="color"/>
        <attr name="spb_stroke_width" format="dimension"/>
        <attr name="spb_stroke_separator_length" format="dimension"/>
        <attr name="spb_sections_count" format="integer"/>
        <attr name="spb_speed" format="float"/>
        <attr name="spb_progressiveStart_speed" format="float"/>
        <attr name="spb_progressiveStop_speed" format="float"/>
        <attr name="spb_interpolator" format="enum">
            <enum name="spb_interpolator_accelerate" value="0"/>
            <enum name="spb_interpolator_linear" value="1"/>
            <enum name="spb_interpolator_acceleratedecelerate" value="2"/>
            <enum name="spb_interpolator_decelerate" value="3"/>
        </attr>
        <attr name="spb_reversed" format="boolean"/>
        <attr name="spb_mirror_mode" format="boolean"/>
        <attr name="spb_colors" format="reference"/>
        <attr name="spb_progressiveStart_activated" format="boolean"/>
        <attr name="spb_background" format="reference"/>
        <attr name="spb_generate_background_with_colors" format="boolean"/>
        <attr name="spb_gradients" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DrawInsetsFrameLayout">
        <attr name="insetBackground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SelectorOptions">
        <attr name="selectorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ListBuddiesOptions">
        <attr name="gap" format="reference" />
        <attr name="gapColor" format="color" />
        <attr name="speed" format="integer" />
        <attr name="listsDivider" format="reference" />
        <attr name="listsDividerHeight" format="reference" />
        <attr name="autoScrollFaster" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="scrollFaster" format="enum">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LinearScrollLayout">
        <attr name="navigationHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GradientImageView">
        <attr name="barPos" format="integer" />
    </declare-styleable>
</resources>